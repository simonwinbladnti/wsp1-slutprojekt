<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sports Club Management</title>
    <link rel="stylesheet" type="text/css" href="/style.css?<%=Time.now.to_i%>">
</head>
<body>
    <header>
        <div class="logo">Sports Club</div>
        <% if @current_team %>
            <h1>Current Team: <%= @current_team['label'] %></h1>
        <% else %>
            <h1>Select a Team</h1>
        <% end %>
        <div class="account-tab">
            <button class="account-btn">Account</button>
            <div class="account-dropdown">
                <a href="/login">Log In</a>
                <a href="/profile">View Profile</a>
                <a href="/settings">Settings</a>
            </div>
        </div>
    </header>

    <nav>
        <ul>
            <li><a href="/index">Start</a></li>
            <% if @team %>
                <li><a href="/team/<%= @team['id'] %>">Team</a></li>
            <% else %>
                <li><a href="/team">Select Team</a></li>
            <% end %>
            <li><a href="/calendar">Calendar</a></li>
            <li><a href="/series">Series</a></li>
        </ul>
    </nav>

    <main>
        <!-- Team Section -->
        <section id="team">
            <% if @team %>
                <h2>Team: <%= @team['name'] %></h2>

                <!-- Players Section -->
                <div class="team-section">
                    <h3>Players</h3>
                    <% if @players.any? %>
                        <ul>
                            <% @players.each do |player| %>
                                <li><%= player['name'] %> - <%= player['role'] %></li>
                            <% end %>
                        </ul>
                    <% else %>
                        <p>No players found for this team.</p>
                    <% end %>
                </div>
            <% else %>
                <p>Please select a team to view details.</p>
            <% end %>
        </section>
    </main>

    <footer>
        <p>&copy; 2023 Sports Club Management. All rights reserved.</p>
    </footer>
</body>
</html>
