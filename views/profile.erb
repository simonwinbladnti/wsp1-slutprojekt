<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sports Club Management</title>
    <link rel="stylesheet" type="text/css" href="/style.css?<%=Time.now.to_i%>">
</head>
<body>
    <header>
        <div class="logo">Sports Club</div>
        <% if @current_team %>
            <h1>Current Team: <%= @current_team['label'] %></h1>
        <% else %>
            <h1>Select a Team</h1>
        <% end %>
        <div class="account-tab">
            <button class="account-btn">Account</button>
            <div class="account-dropdown">
                <% if @current_user %>
                    <a href="logout">Log Out</a>
                <% else %>
                    <a href="login">Log In</a>
                <% end %>
                <a href="/profile">View Profile</a>
                <a href="/settings">Settings</a>
            </div>
        </div>
    </header>

    <nav>
        <ul>
            <li><a href="/index">Start</a></li>
            <% if @team %>
                <li><a href="/team/<%= @team['id'] %>">Team</a></li>
            <% else %>
                <li><a href="/team">Select Team</a></li>
            <% end %>
            <li><a href="/calendar">Calendar</a></li>
        </ul>
    </nav>

    <main>
        <section id="profile">
            <h2>User Profile: <%= @user['username'] %></h2>

            <!-- Messages -->
            <% if @message %>
                <p class="success"><%= @message %></p>
            <% elsif @error %>
                <p class="error"><%= @error %></p>
            <% end %>

            <!-- Change Password Section -->
            <div class="change-password-section">
                <h3>Change Password</h3>

                <form action="/change_password" method="POST">
                    <div>
                        <label for="current_password">Current Password:</label>
                        <input type="password" name="current_password" id="current_password" required>
                    </div>
                    <div>
                        <label for="new_password">New Password:</label>
                        <input type="password" name="new_password" id="new_password" required>
                    </div>
                    <div>
                        <label for="confirm_password">Confirm New Password:</label>
                        <input type="password" name="confirm_password" id="confirm_password" required>
                    </div>
                    <button type="submit">Change Password</button>
                </form>
            </div>
        </section>
    </main>

    <footer>
        <p>&copy; 2023 Sports Club Management. All rights reserved.</p>
    </footer>
</body>
</html>
